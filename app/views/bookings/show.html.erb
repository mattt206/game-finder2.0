<div class="container">
  <div class="my-2 py-2">
  <div class="show-card mt-3">
          <div class="show-card-image">
            <% if @booking.videogame.gamepicture.attached? %>
              <%= cl_image_tag @booking.videogame.gamepicture.key, class: "card-img-top img-fluid"%>
            <% else %>
              <%= image_tag "unknowimg.png", class: "card-img-top img-fluid" %>
            <% end %>
          </div>
          <div class="show-card-body">
            <h2 ><%= @booking.videogame.title.titleize %></h2>
            <h3> Plataforma: <%= @booking.videogame.platform %></h3>
            <h4 class="card-text">Desde:   <%= @booking.star_date.to_date %></h4>
            <h4 class="card-text">Hasta:   <%= @booking.end_date.to_date %></h4>
            <%#= hacer un if si esta alquilado o no  %>
            <%#= link_to "Delete", videogame_path(game), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            <div class="show-card-links">
              <%= link_to "Back", videogames_path, class: "btn btn-success mx-2"%>
              <%= link_to "Delete", booking_path(@booking), class: "btn btn-warning mx-2", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            </div>
          </div>
        </div>
  </div>
</div>
