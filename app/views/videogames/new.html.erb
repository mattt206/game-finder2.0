
<div class="container">
  <div class="col-6 mx-auto">
    <div class="container">
      <h1>crear videojuego</h1>
    </div>
    <div>
      <%= simple_form_for [@videogame]  do |f| %>
        <%= f.input :title %>
        <%= f.input :price %>
        <%= f.input :condition, collection: ['Nuevo','Usado'] %>
        <%= f.input :description %>
        <%= f.input :platform %>
        <%= f.input :status, collection: ['1','2','3','4','5']  %>
        <%= f.input :gamepicture, as: :file %>
        <%= f.submit id="Save" %>
      <% end %>
      <p></p>
    </div>
  </div>
</div>

<%= current_user.id %>
