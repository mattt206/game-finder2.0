<div class="container">


      <div class="card-group row my-2 py-2">
        <div class=" card col-7">
          <div style="width: 50%"><%= cl_image_tag @videogame.gamepicture.key, class: "card-img-top "%></div>
          <div class="card-body">
            <h5 class="card-title"><%= @videogame.title %></h5>
            <p><% @videogame.status.to_i.times do%><i class="fa-regular fa-star star-color"></i><% end %></p>
            <p class="card-text"> <%= @videogame.description %> </p>
            <p class="card-text"> $ <%= @videogame.price %> </p>
            <p class="card-text"> platform: <%= @videogame.platform %></p>
            <p class="card-text"> Condition: <%= @videogame.condition %></p>

            <%#= hacer un if si esta alquilado o no  %>
            <%#= link_to "Delete", videogame_path(game), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
              <%= link_to "Delete", videogame_path(@videogame), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            <%= link_to "Edit", edit_videogame_path(@videogame) %>
            <%= link_to "Back", videogames_path %>

          </div>
        </div>
        <div class="col-5">
          <div class="card p-3">
              <div class="my-2 d-flex justify-content-between">
                owner: <%= @videogame.user.username %>
                  <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", 'aria-haspopup': true, 'aria-expanded': false %>
              </div>
                <p>aca va el booking</p>
