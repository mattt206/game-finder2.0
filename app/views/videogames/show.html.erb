                <%= link_to 'Reservar', value: 1  %>

                <% if @num.to_i == 1 %>
                <h1><%= @num %></h1>
            <div>
                    <%= simple_form_for [@videogame]  do |f| %>
                    <%= f.input :title, value: "fecha" %>
                    <%= @videogame.price %>

                    <%= f.submit id="Save" %>
                    <% @num = 0 %>
      <% end %>
            </div>
            <% end  %>
          </div>
        </div>
      </div>



</div>
